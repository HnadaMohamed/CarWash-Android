<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dahbi4s.lavagemobile">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/key_google_apis_android"/>

        <activity android:name=".activities.ShowLocation"></activity>
        <activity android:name=".activities.Dashboard" />
        <activity android:name=".activities.BookingListe" />
        <activity
            android:name=".activities.Confirmation"
            android:theme="@style/AppThemeLite" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SelectAddress" />
        <activity android:name=".activities.BookingStep" />
        <activity android:name=".activities.BookingEdit" />
    </application>

</manifest>